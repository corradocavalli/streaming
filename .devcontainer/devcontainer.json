{
  "name": "dataingest-devcontainer",
  "context": ".",
  "dockerFile": "Dockerfile",

  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-toolsai.vscode-ai", "ms-toolsai.jupyter", "redhat.vscode-yaml", "python.formatting.black"],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "editor.defaultFormatter": "ms-python.python"
      }
    }
  },

  "runArgs": ["-v", "/var/run/docker.sock:/var/run/docker.sock"]
}
